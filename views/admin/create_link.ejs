<form method="post" class="col-624 d-inline-block" action="<%=sails.config.appUrl%>admin/create_link">
  <div class="card">
    <div class="card-header">
      <strong>Create </strong>Link
    </div>
    <div class="card-block">

      <div class="form-group">
        <label for="nf-email">Link Name</label>
        <input type="text" name="link_name" class="form-control" placeholder="Your Link Name">
      </div>

      <div class="form-group">
        <label for="nf-email">Link Slug</label>
        <input type="text" required pattern="[a-zA-Z0-9-_=?]+" name="url-slug" class="form-control" placeholder="Link Slug" value="">

        <%if (error != null) { %>
          <br/>
          <span class="help-block text-danger"><%=error%></span>
          <% } %>
      </div>

      <div class="form-group">
        <label for="nf-email">Destination URL</label>
        <input type="url" required name="url" class="form-control" placeholder="Destination URL">
      </div>

      <div class="form-group">
        <h6>Advanced Query Options</h6>
        <div>
          <div class="col-3 d-inline-block">
            <label for="checkbox3">
              <input type="checkbox" id="checkbox3" name="remove" value="1"> Remove
            </label>
          </div>
        </div>

        <div>
          <div class="col-3 d-inline-block">
            <label for="checkbox4">
              <input type="checkbox" id="checkbox4" name="passthrough" value="1"> Passthrough
            </label>
          </div>
        </div>

        <div>
          <div class="col-3 d-inline-block">
            <label for="checkbox5">
              <input type="checkbox" id="checkbox5" name="hasoffers" value="1"> HasOffers
            </label>
          </div>
        </div>

      </div>

    </div>

    <div class="card-footer">
      <button type="submit" class="btn btn-sm btn-primary"><i class="fa fa-dot-circle-o"></i> Submit</button>
      <button type="reset" class="btn btn-sm btn-danger"><i class="fa fa-ban"></i> Reset</button>
    </div>
  </div>
</form>


<form method="post" class="col-624 d-inline-block" enctype="multipart/form-data" action="<%=sails.config.appUrl%>admin/load_csv">
  <div class="card">
