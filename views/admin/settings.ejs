<form method="post" action="<%=sails.config.appUrl%>admin/settings/">
  <div class="card">
    <div class="card-header">
      <strong>Edit  </strong>Link
    </div>
    <div class="card-block">
      <div class="form-group">
        <label for="nf-email">Your Email</label>
        <input type="email" disabled name="url" class="form-control" placeholder="Your Email" value="<%=user.email%>">
      </div>

      <div class="form-group">
        <label for="nf-email">Your Name</label>
        <input type="text" required name="name" class="form-control" placeholder="Your Name" value="<%=user.name%>">
      </div>

      <div class="form-group">
        <label for="nf-email">Old Password</label>
        <input type="password" name="old_pass" class="form-control" placeholder="Old Password">
      </div>
      <div class="form-group">
        <label for="nf-email">New Passowrd</label>
        <input type="password" name="new_pass" class="form-control" placeholder="New Password">
      </div>

    </div>
    <div class="card-footer">
      <button type="submit" class="btn btn-sm btn-primary"><i class="fa fa-dot-circle-o"></i> Submit</button>
      <button type="reset" class="btn btn-sm btn-danger"><i class="fa fa-ban"></i> Reset</button>
    </div>
  </div>
</form>
